
# core compiling options
CC  = @CC@
CXX = @CXX@
FC  = @FC@

CXX_STD = -std=c++11
OPT_FLAGS = @OPTIM_OPT_FLAGS@

ARMA_INCLUDE_PATH = @ARMA_INCLUDE_PATH@

# install location
INSTALL_PATH=@OPTIM_INSTALL_PATH@

# source directories
SDIR = ./..
OPTIM_DIR = $(SDIR)
OPTIM_HEADER_DIR = @OPTIM_INCLUDE_PATH@
OPTIM_TEST_DIR = .

# general flags
CXXFLAGS = $(CXX_STD) -Wall $(OPT_FLAGS) $(ARMA_INCLUDE_PATH) -I$(OPTIM_HEADER_DIR)
LIBS= -L@OPTIM_INSTALL_PATH@ -l@OPTIM_SHLIB_NAME@ @OPTIM_BLAS_LAPACK@

# TraME Test Files
SOURCES_OPTIM= $(OPTIM_TEST_DIR)/error_reporting.cpp $(OPTIM_TEST_DIR)/logit_transform.cpp
OBJECTS_OPTIM= $(SOURCES_OPTIM:.cpp=.test)

all: $(OBJECTS_OPTIM)

# core TraME files
$(OPTIM_TEST_DIR)/%.test: $(OPTIM_TEST_DIR)/%.cpp
	$(CXX) $(CXXFLAGS) $< -o $@ $(LIBS)

# cleanup and install
.PHONY: clean
clean:
	@rm -rf *.so ./*.gcov ./*.gcno ./*.gcda ./*.dSYM ./*.test
